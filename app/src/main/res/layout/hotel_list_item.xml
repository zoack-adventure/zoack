<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hotelImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/roundbcg"
        android:scaleType="centerCrop"
        android:src="@drawable/resimg"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar1"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:background="@drawable/gradient"
        android:drawablePadding="5dp"
        android:fontFamily="@font/lato_medium"
        android:padding="15dp"
        android:paddingLeft="5dp"
        android:text="view details"
        android:textAllCaps="true"
        android:textColor="@color/whiteC"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar1" />

    <RatingBar
        android:id="@+id/ratingBar1"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotelNameTextView"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"
        android:max="5"
        android:progressBackgroundTint="@color/whiteC"
        android:progressTint="@color/zoack_green"
        android:scaleX=".75"
        android:scaleY=".75"
        android:secondaryProgressTint="@android:color/transparent"
        android:stepSize="0.01"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotelNameTextView" />

    <TextView
        android:id="@+id/hotelNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/robotobold"
        android:gravity="center"
        android:maxLines="2"
        android:padding="16dp"
        android:textAllCaps="true"
        android:textColor="@color/blackText"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar1"
        app:layout_constraintTop_toBottomOf="@+id/hotelImageView"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Hotel name" />


</androidx.constraintlayout.widget.ConstraintLayout>


